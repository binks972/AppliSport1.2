<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3498db"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="240dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="88dp"
        android:text="Type: Match, Date et heure: Samedi 19h, Lieu: Terrain Noisy le grand"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#2980b9"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxPresent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrÃ©sent"
        android:textSize="20sp"
        android:layout_below="@id/editTextName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxAbsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absent"
        android:textSize="20sp"
        android:layout_below="@id/checkBoxPresent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxAbsent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="108dp"
        android:background="#e74c3c"
        android:text="Soumettre"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonMenu"
        android:layout_width="273dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="62dp"
        android:background="#27ae60"
        android:text="Menu Principal"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</RelativeLayout>
