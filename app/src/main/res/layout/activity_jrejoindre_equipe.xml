<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3498db"
    tools:context=".JRejoindreEquipe">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:id="@+id/textView4"
           android:layout_width="347dp"
           android:layout_height="73dp"
           android:layout_centerHorizontal="true"
           android:text="Pour rejoindre une équipe, cliquez ici"
           android:textColor="#ffffff"
           android:textSize="20sp"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="40dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           tools:layout_editor_absoluteY="529dp" />

       <Button
           android:id="@+id/button3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="50dp"
           android:text="Rejoindre une équipe"
           android:textColor="#ffffff"
           android:textSize="20sp"

           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView4" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="354dp"
           android:layout_height="71dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="200dp"
           android:layout_marginLeft="40dp"
           android:text="Si vous avez deja une équipe, cliquez sur ce bouton pour consulter votre équipe"
           android:textColor="#ffffff"

           android:textSize="20sp" />


       <Button
           android:id="@+id/button4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:text="Votre équipe"
           android:textColor="#ffffff"
           android:textSize="20sp"

           app:layout_constraintBottom_toTopOf="@+id/textView4"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent" />



   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>