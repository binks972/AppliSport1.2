    <?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JRejoindreEquipe">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:id="@+id/textView4"
           android:layout_width="271dp"
           android:layout_height="19dp"
           android:text="Pour rejoindre une équipe, cliquez ici"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           tools:layout_editor_absoluteY="529dp" />

       <Button
           android:id="@+id/button3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:text="Rejoindre une équipe"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView4" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="401dp"
           android:layout_height="71dp"
           android:layout_marginTop="200dp"
           android:text="Si vous avez deja une équipe, cliquez sur ce bouton pour consulter votre équipe"/>


       <Button
           android:id="@+id/button4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Votre équipe"
           app:layout_constraintBottom_toTopOf="@+id/textView4"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent" />




   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>